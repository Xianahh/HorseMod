<?xml version="1.0" encoding="utf-8"?>
<animNode>
    <m_Name>Horse_PathfindRun</m_Name>
    <m_AnimName>Horse_Gallop</m_AnimName>
    <m_ConditionPriority>10</m_ConditionPriority>
    <m_EarlyTransitionOut>false</m_EarlyTransitionOut>
    <m_deferredBoneAxis>Y</m_deferredBoneAxis>
    <m_BlendTime>0.6</m_BlendTime>
    <m_SpeedScale>1.1</m_SpeedScale>
    <m_Scalar>geneSpeed</m_Scalar>
    <m_SyncTrackingEnabled>false</m_SyncTrackingEnabled>

    <m_Conditions>
        <m_Name>isHorse</m_Name>
        <m_Type>BOOL</m_Type>
        <m_Value>true</m_Value>
    </m_Conditions>
    <m_Conditions>
        <m_Name>HorseGallop</m_Name>
        <m_Type>BOOL</m_Type>
        <m_Value>true</m_Value>
    </m_Conditions>

    <m_Transitions>
        <m_Target>Horse_PathfindRunTurnRight</m_Target>
        <m_blendInTime>0.60</m_blendInTime>
        <m_blendOutTime>0.60</m_blendOutTime>
        <m_Conditions>
            <m_Name>targetTwist</m_Name>
            <m_Type>GTR</m_Type>
            <m_Value>1</m_Value>
        </m_Conditions>
    </m_Transitions>

    <m_Transitions>
        <m_Target>Horse_PathfindRunTurnLeft</m_Target>
        <m_blendInTime>0.60</m_blendInTime>
        <m_blendOutTime>0.60</m_blendOutTime>
        <m_Conditions>
            <m_Name>targetTwist</m_Name>
            <m_Type>LESS</m_Type>
            <m_Value>-1</m_Value>
        </m_Conditions>
    </m_Transitions>

    <m_Transitions>
        <m_Target>Horse_PathfindRunJump</m_Target>
        <m_blendInTime>0.20</m_blendInTime>
        <m_blendOutTime>0.20</m_blendOutTime>
        <m_Conditions>
            <m_Name>HorseJump</m_Name>
            <m_Type>BOOL</m_Type>
            <m_Value>true</m_Value>
        </m_Conditions>
    </m_Transitions>

    <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_TimePc>0.3</m_TimePc>
		<m_ParameterValue>GallopToIdle=true</m_ParameterValue>
	</m_Events>
    <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_Time>End</m_Time>
		<m_ParameterValue>GallopToIdle=false</m_ParameterValue>
	</m_Events>
    <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_Time>Start</m_Time>
		<m_ParameterValue>isTurningLeft=false</m_ParameterValue>
	</m_Events>
    <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_Time>Start</m_Time>
		<m_ParameterValue>isTurningRight=false</m_ParameterValue>
	</m_Events>
  <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_Time>Start</m_Time>
		<m_ParameterValue>HorseGalloping=true</m_ParameterValue>
	</m_Events>
  <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_Time>End</m_Time>
		<m_ParameterValue>HorseGalloping=false</m_ParameterValue>
	</m_Events>
  <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_Time>Start</m_Time>
		<m_ParameterValue>isTurningLeftSharp=false</m_ParameterValue>
	</m_Events>
  <m_Events>
		<m_EventName>SetVariable</m_EventName>
		<m_Time>Start</m_Time>
		<m_ParameterValue>isTurningRightSharp=false</m_ParameterValue>
	</m_Events>

    <m_Transitions>
        <m_Target>Horse_Idle</m_Target>
        <m_AnimName>Horse_GallopToWalk</m_AnimName>
        <m_blendOutTime>0.40</m_blendOutTime>
        <m_blendInTime>0.80</m_blendInTime>
        <m_BlendTime>0.80</m_BlendTime>
        <m_EarlyTransitionOut>true</m_EarlyTransitionOut>
        <m_SyncTrackingEnabled>false</m_SyncTrackingEnabled>
        <m_speedScale>1.00</m_speedScale>
        <m_Conditions>
            <m_Name>isHorse</m_Name>
            <m_Type>BOOL</m_Type>
            <m_Value>true</m_Value>
        </m_Conditions>
        <m_Conditions>
            <m_Name>HorseGallop</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>false</m_BoolValue>
        </m_Conditions>
    </m_Transitions>

    <m_Transitions>
        <m_Target>Horse_PathfindWalk</m_Target>
        <m_BlendTime>0.80</m_BlendTime>
        <m_speedScale>0.80</m_speedScale>
        <m_Conditions>
            <m_Name>HorseGallop</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>false</m_BoolValue>
        </m_Conditions>
    </m_Transitions>

    <m_Transitions>
        <m_Target>Horse_PathfindTrot</m_Target>
        <m_BlendTime>0.80</m_BlendTime>
        <m_Conditions>
            <m_Name>HorseTrot</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>true</m_BoolValue>
        </m_Conditions>
        <m_Conditions>
            <m_Name>animalWalking</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>true</m_BoolValue>
        </m_Conditions>
        <m_Conditions>
            <m_Name>animalRunning</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>false</m_BoolValue>
        </m_Conditions>
    </m_Transitions>

    <m_Transitions>
        <m_Target>Horse_PathfindRunTurnLeftSharp</m_Target>
        <m_BlendTime>0.80</m_BlendTime>
        <m_blendOutTime>0.40</m_blendOutTime>
        <m_blendInTime>0.80</m_blendInTime>
        <m_Conditions>
          <m_Name>targetTwist</m_Name>
          <m_Type>LESS</m_Type>
          <m_Value>-50</m_Value>
        </m_Conditions>
    </m_Transitions>

    <m_Transitions>
        <m_Target>Horse_PathfindRunTurnRightSharp</m_Target>
        <m_BlendTime>0.80</m_BlendTime>
        <m_blendOutTime>0.40</m_blendOutTime>
        <m_blendInTime>0.80</m_blendInTime>
        <m_Conditions>
          <m_Name>targetTwist</m_Name>
          <m_Type>GTR</m_Type>
          <m_Value>50</m_Value>
        </m_Conditions>
    </m_Transitions>

